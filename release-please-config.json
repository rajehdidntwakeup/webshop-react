{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "packages": {
    ".": {
      "release-type": "node",
      "package-name": "webshop-react",
      "changelog-path": "CHANGELOG.md",
      "include-component-in-tag": false,
      "include-v-in-tag": true,
      "pull-request-title-pattern": "chore(release): release ${version}",
      "pull-request-header": "This PR prepares the next release by updating versions and changelog entries following conventional commits. Please review and merge to publish the release.",
      "label": "release",
      "changelog-type": "default",
      "changelog-sections": [
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes"
        },
        {
          "type": "refactor",
          "section": "Refactors",
          "hidden": false
        },
        {
          "type": "perf",
          "section": "Performance Improvements",
          "hidden": false
        },
        {
          "type": "chore",
          "section": "Miscellaneous Chores",
          "hidden": false
        },
        {
          "type": "test",
          "section": "Tests",
          "hidden": true
        },
        {
          "type": "docs",
          "section": "Documentation",
          "hidden": false
        },
        {
          "type": "build",
          "section": "Build System",
          "hidden": true
        },
        {
          "type": "ci",
          "section": "Continuous Integration",
          "hidden": false
        }
      ]
    }
  }
}
